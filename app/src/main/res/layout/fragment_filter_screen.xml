<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.FilterScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/createButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Create"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timePicker1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="89dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:text="Genre"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="@+id/yearText"
            app:layout_constraintStart_toStartOf="@+id/yearText"
            app:layout_constraintTop_toBottomOf="@+id/yearText"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/yearText"
            android:layout_width="89dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:text="Year"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="MissingConstraints" />


        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderRangeYears"
            android:layout_width="200dp"
            android:layout_height="66dp"
            android:stepSize="1"
            android:value="20"
            android:valueFrom="1912"
            android:valueTo="2021"
            app:layout_constraintBottom_toBottomOf="@+id/yearText"
            app:layout_constraintEnd_toEndOf="@+id/directorChoseET"
            app:layout_constraintTop_toTopOf="@+id/yearText"
            app:tickVisible="false"
            app:values="@array/rangeSliderValues" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderRangeRating"
            android:layout_width="200dp"
            android:layout_height="66dp"
            android:stepSize="0.1"
            android:value="20"
            android:valueFrom="0"
            android:valueTo="10"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/sliderRangeYears"
            app:layout_constraintStart_toStartOf="@+id/sliderRangeYears"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:tickVisible="false"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/genreButton"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Choose"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/sliderRangeYears"
            app:layout_constraintStart_toStartOf="@+id/sliderRangeYears"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/directorChoseET"
            android:layout_width="201dp"
            android:layout_height="42dp"
            android:layout_marginEnd="10dp"
            android:hint="Choose"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            tools:ignore="MissingConstraints"
            tools:textColorHint="@color/white" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Minimal Rating"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderVotesPercentage"
            android:layout_width="200dp"
            android:layout_height="51dp"
            android:stepSize="1"
            android:value="20"
            android:valueFrom="0"
            android:valueTo="100"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/sliderRangeRating"
            app:layout_constraintStart_toStartOf="@+id/sliderRangeRating"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:tickVisible="false" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Vote's percentage"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="110dp"
            android:text="Director"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/directorChoseET"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TimePicker
            android:id="@+id/timePicker1"
            android:layout_width="201dp"
            android:layout_height="67dp"
            android:layout_centerHorizontal="true"
            android:timePickerMode="spinner"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/sliderVotesPercentage"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Valid Till"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>