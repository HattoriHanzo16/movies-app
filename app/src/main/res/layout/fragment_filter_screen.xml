<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/join_background"
    tools:context=".start.FilterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/durationText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filterTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingTop="20dp"
                    android:text="Let's start!"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <View
                    style="@style/Divider"
                    android:layout_height="0.3dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/genreButton"
                    android:layout_width="370dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/back_button"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Genres"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <View
                    style="@style/Divider"
                    android:layout_height="0.3dp" />

                <TextView
                    android:id="@+id/yearText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Release date"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/sliderRangeYears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:stepSize="1"
                    app:thumbColor="@color/white"
                    app:thumbStrokeColor="#FF542B"
                    app:thumbStrokeWidth="2dp"
                    app:tickVisible="false"
                    app:trackColor="#FF542B" />

                <View
                    style="@style/Divider"
                    android:layout_height="0.3dp" />

                <TextView
                    android:id="@+id/textViewLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Original language"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/languageSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/blue_outline"
                    android:backgroundTint="#e2632f"
                    android:popupBackground="#354395"
                    android:textAlignment="center" />

                <View
                    style="@style/Divider"
                    android:layout_height="0.3dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Minimal Rating"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/sliderRangeRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:stepSize="0.1"
                    android:valueFrom="0"
                    android:valueTo="10"
                    app:thumbColor="@color/white"
                    app:thumbStrokeColor="#FF542B"
                    app:thumbStrokeWidth="2dp"
                    app:tickVisible="false"
                    app:trackColor="#FF542B"
                    tools:ignore="MissingConstraints" />

                <View
                    style="@style/Divider"
                    android:layout_height="0.3dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Duration"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/sliderRangeDuration"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginBottom="20dp"
                    android:stepSize="10"
                    android:valueFrom="0"
                    android:valueTo="300"
                    app:thumbColor="@color/white"
                    app:thumbStrokeColor="#FF542B"
                    app:thumbStrokeWidth="2dp"
                    app:tickVisible="false"
                    app:trackColor="#FF542B" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/chair" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Vote's percentage"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/sliderVotesPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:stepSize="10"
                    android:valueFrom="50"
                    android:valueTo="100"
                    app:thumbColor="@color/white"
                    app:thumbStrokeColor="#FF542B"
                    app:thumbStrokeWidth="2dp"
                    app:tickVisible="false"
                    app:trackColor="#FF542B" />

                <View
                    style="@style/Divider"
                    android:layout_height="0.3dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Join link active for"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/joinTimerSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:stepSize="30"
                    android:valueFrom="30"
                    android:valueTo="300"
                    app:thumbColor="@color/white"
                    app:thumbStrokeColor="#FF542B"
                    app:thumbStrokeWidth="2dp"
                    app:tickVisible="false"
                    app:trackColor="#FF542B" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/createButton"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_join_lobby"
                    android:text="submit"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>