<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_background"
    tools:context=".start.ShareFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startSwipingButton"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_start_lobby"
        android:fontFamily="@font/spacegrotesk"
        android:text="start Swiping"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/qrView"
        app:layout_constraintStart_toStartOf="@+id/qrView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shareLinkButton"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_share_link"
        android:drawableRight="@android:drawable/ic_menu_share"
        android:fontFamily="@font/spacegrotesk"
        android:paddingEnd="10dp"
        android:text="Share Link"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/startSwipingButton"
        app:layout_constraintEnd_toEndOf="@+id/qrView"
        app:layout_constraintStart_toStartOf="@+id/qrView" />

    <ImageView
        android:id="@+id/qrView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toTopOf="@+id/shareLinkButton"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/sessionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/copySessionId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/copySessionId" />

    <ImageButton
        android:id="@+id/copySessionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="?attr/actionModeCopyDrawable"
        app:layout_constraintBottom_toTopOf="@+id/qrView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/sessionId"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="229dp"
        android:layout_height="154dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="60dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="  Lobby created!"
        android:textColor="@color/white"
        android:textSize="49dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/share_back"
        android:layout_width="54dp"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/back_button"
        android:drawableRight="@drawable/back_foreground"
        android:paddingEnd="-15dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>